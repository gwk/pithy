{
  "exclude": [
    "_misc/**",
    "dist/**",
    "node/**",
    "pkg/**",
    "vscode/legs/src/extension.ts",
    "vscode/legs/built/extension.js",
    "wu/writeup.js",
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ], // Get intellisense for the available platform APIs.
    "target": "es2022",
  }
}
