// See: https://zed.dev/docs/configuring-zed#settings-files
{
  "ignore": [
    "pkg/crafts/**",
    "pkg/iotest/**",
    "pkg/legs/**",
    "pkg/pithy/**",
    "pkg/pithytools/**",
    "pkg/tolkien/**",
    "pkg/utest/**",
    "pkg/wu/**"
  ],
  "languages": {
    "Python": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "isort",
          "arguments": ["-", "--stdout"]
        }
      }
    }
  }
}
